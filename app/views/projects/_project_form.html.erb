<%= form_for @project do |f| %>

<% if @project.errors.any? %>
<ul> 
  <% @project.errors.full_messages.each do |msg| %>
  <li><font color = "red" ><%= msg %></font></li>
  <%end%>
</ul>
<%end%>


  <div class="field">
    <%= f.label :project_no %><br>
    <%= f.text_field :project_no %>
  </div>
  <div class="field">
    <%= f.label :client_name %><br>
    <%= f.text_field :client_name %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :status %><br>
    <%= f.text_field :status %>
  </div>



<div class="actions">
<%= f.submit %> 
<br>Accept Terms: <%= f.check_box :terms_accepted %>
</div>

<% end %>
