<h1>DISCUSSIONS</h1>
<p style="text-align:right"><%= link_to 'New Discussion', new_discussion_path, class: "btn btn-primary" %>
<%= link_to 'Project Database', projects_path, class: "btn btn-primary" %></p>
<table align="center">
	<thead>
		<tr>
			<th>Don's PM Discussions</th>
			<th></th>

		</tr>
		
	</thead>

	<tbody>
		<th>Title</th>
		<th>Body</th>
		<th>Likes</th>


		<% @dicussions.each do |i| %>

		<tr>
			<td><%= i.title %></td>
			<td><%= i.body.truncate(100) %></td>
			<td><%= i.counter %></td>



			<td><%= link_to "Edit", edit_discussion_path(i) %></td>
			<td><%= link_to "Show", discussion_path(i) %></td>

				<% if session[:discussion_ids].present? && session[:discussion_ids].include?(i.id.to_s) %>
					<td><%= link_to "Like", "javascript:void(0);", disabled: "disabled", class: "btn btn-default btn-sm"%></td>				
 			 	<% else %>
					<td><button type="button" class="btn btn-default btn-sm">
	 			 	<span class="glyphicon glyphicon-thumbs-up"></span>
	 			 	<%= link_to "Like", like_discussion_path(i) %></button></td>
  		 <% end %>

  		 	<% end %>
   </tbody>
</table>

<br>


